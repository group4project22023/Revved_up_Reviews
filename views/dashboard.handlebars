<div class="bg-white w-[80%] self-center shadow-lg rounded-lg px-6 py-4">
  <div class="text-4xl font-semibold">
    <h2>Welcome, {{username}}!</h2>
<div class="row">
  <div class="col-auto">
    <h2><span></span>Welcome, {{username}}!<span></span></h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Car Review:</h3>

    <form class="new-carReview-form">
      <div class="form-group">
        <input
          class="form-input"
          type="text"
          id="carReview-title"
          name="carReview-title"
          placeholder="carReview Title"
        />
        <input
          class="form-input"
          type="text"
          id="make"
          name="carReview-make"
          placeholder="Car Make"
        />
        <input
          class="form-input"
          type="text"
          id="model"
          name="carReview-model"
          placeholder="Car Model"
        />
      </div>

      <div class="form-group">
        <textarea
          class="form-input"
          id="carReview-desc"
          name="carReview-desc"
          placeholder="carReview Content"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <div class="border border-dashed my-4"></div>
  
  <div class="">
    <div class="flex flex-col gap-4">
      <h3 class="text-2xl">Create a new car review:</h3>

      <form class="form new-carReview-form flex flex-col gap-4">
        <div class="form-group w-full self-center">
          <input
            class="form-input bg-[#f5f3f3] rounded-lg p-1 px-2 w-full"
            type="text"
            id="carReview-title"
            name="carReview-title"
            placeholder="Car Review Title"
          />
        </div>

        <div class="form-group">
          <textarea
            class="form-input bg-[#f5f3f3] rounded-lg p-1 px-2 w-full"
            id="carReview-desc"
            name="carReview-desc"
            placeholder="Car Review Content"
            rows="10"
          ></textarea>
        </div>
        <div class="form-group flex flex-row justify-center">
          <button
            type="submit"
            class="bg-gray-600 text-white px-10 rounded-xl p-2 hover:bg-green-400 btn btn-primary"
          >Create</button>
        </div>
      </form>
    </div>

    {{#if carReviews.length}}
  <div class="border border-dashed my-4"></div>

      <div class="flex flex-col gap-4 carReview-list">
        <h3 class="text-2xl">Current Car Reviews:</h3>

        {{#each carReviews as |carReview|}}
          <div class="flex flex-row justify-between px-10 rounded-lg bg-[#f5f3f3] py-4">
            <div class="">
              <h4><a
                  href="/carReview/{{carReview.id}}"
                >{{carReview.title}}</a></h4>
            </div>
            <div class="">
              <button
                class="btn btn-danger bg-red-500  hover:bg-red-700 px-4 py-1 rounded-lg text-white"
                data-id="{{carReview.id}}"
              >DELETE</button>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
    <div class="col-md-6 carReview-list">
      <h3>Current Car Reviews:</h3>

      {{#each carReviews as |carReview|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a
                href="/carReview/{{carReview.id}}"
              >{{carReview.title}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-danger"
              data-id="{{carReview.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>