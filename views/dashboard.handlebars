<div class="bg-white w-[80%] self-center shadow-lg rounded-lg px-6 py-4">
  <div class="text-4xl font-semibold">
    <h2>Welcome, {{username}}!</h2>
  </div>

  <div class="border border-dashed my-4"></div>
  
  <div class="">
    <div class="flex flex-col gap-4">
      <h3 class="text-2xl">Create a new car review:</h3>

      <form class="form new-carReview-form flex flex-col gap-4">
        <div class="form-group w-full self-center">
          <input
            class="form-input bg-[#f5f3f3] rounded-lg p-1 px-2 w-full"
            type="text"
            id="carReview-title"
            name="carReview-title"
            placeholder="Car Review Title"
          />
        </div>

        <div class="form-group">
          <textarea
            class="form-input bg-[#f5f3f3] rounded-lg p-1 px-2 w-full"
            id="carReview-desc"
            name="carReview-desc"
            placeholder="Car Review Content"
            rows="10"
          ></textarea>
        </div>
        <div class="form-group flex flex-row justify-center">
          <button
            type="submit"
            class="bg-gray-600 text-white px-10 rounded-xl p-2 hover:bg-green-400 btn btn-primary"
          >Create</button>
        </div>
      </form>
    </div>

    {{#if carReviews.length}}
  <div class="border border-dashed my-4"></div>

      <div class="flex flex-col gap-4 carReview-list">
        <h3 class="text-2xl">Current Car Reviews:</h3>

        {{#each carReviews as |carReview|}}
          <div class="flex flex-row justify-between px-10 rounded-lg bg-[#f5f3f3] py-4">
            <div class="">
              <h4><a
                  href="/carReview/{{carReview.id}}"
                >{{carReview.title}}</a></h4>
            </div>
            <div class="">
              <button
                class="btn btn-danger bg-red-500  hover:bg-red-700 px-4 py-1 rounded-lg text-white"
                data-id="{{carReview.id}}"
              >DELETE</button>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
</div>

<script src="/js/dashboard.js"></script>