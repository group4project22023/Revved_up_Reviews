{{! create handlebars review display to be inserted into main }}
{{#each carReviews as |carReview|}}

  <div class="flex flex-col items-center px-6">

    <div class="px-4 w-[70%] bg-white mx-4 my-2 shadow-sm justify-between py-2 rounded-lg flex flex-col carReviewBox">
			<div class="font-semibold flex flex-row justify-between headerRow">
      <div class="">
        <h2>
          <a class="carReviewTitle" href="/carReview/{{id}}">{{carReview.title}}</a>
        </h2>
      </div>

      <div class="">
        <p class="carReviewCreate">Created by
          {{carReview.user.username}}
          on
          {{format_date carReview.date_created}}
        </p>
      </div>
			</div>
      <div class="border border-dashed mt-2"></div>
    <div class="mt-2 carReviewDesc">
      <p class="carReviewDescMain">
        Review:<br>
        {{carReview.carReview}}
      </p>
    </div>
    <div class="container carReviewBox">
      <div class="row justify-content-center headerRow">
        <div class="col-8">
          <h2>
            <a
              class="carReviewTitle text-uppercase"
              href="/carReview/{{id}}"
            >{{carReview.title}}</a>
          </h2>
        </div>

        <div class="col-4">
          <p class="carReviewCreate text-right">Make:
            {{carReview.carmake}};&nbsp;&nbsp; Model:
            {{carReview.carmodel}};<br />
            Created by
            {{carReview.creator.username}}
            on
            {{format_time carReview.date_reviewcreated}},
            {{format_date carReview.date_reviewcreated}}
          </p>
        </div>
      </div>
      <div class="carReviewDesc">
        <p class="text-center carReviewDescMain">
          {{truncateContent carReview.carReview 20}}
        </p>
      </div>
    </div>

  </div>

{{/each}}