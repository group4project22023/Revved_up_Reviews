<div class="bg-white w-[80%] shadow-lg self-center rounded-lg mx-6 py-2 px-4">

  <div class="flex flex-col gap-4 mx-6 text rounded-lg p-2 carReviewBoxCont">
    <h2 class="text-2xl text-center font-semibold carReviewTitle">{{title}}</h2>
    <p class="carReviewDescTwo">{{carReview}}
      
    </p>
    <p class="text-right carReviewCreate">-Created by
      {{user.username}}
      on
      {{format_date date_created}}</p>
  </div>

  <div class="border border-dashed mt-2"></div>

  <div class="mx-2 mb-10">

    <h2 class="font-semibold text-xl mt-4">Comments</h2>
    {{#each comments as |comment|}}
      <div
        class="commentCont bg-[#f5f3f3] flex flex-col gap-2 m-4 p-2 rounded-lg"
      >
        <p class="commentText">{{comment.comment_description}}</p>
        <p class="commentOwner text-right"><span>~</span>Created by
          {{comment.user.username}}
          on
          {{format_date date_created}}<span>~</span></p>
      </div>
    {{/each}}
  </div>
  {{#if logged_in}}
    <div class="border border-dashed"></div>

    <form
      class="formCont new-comment-form px-6 flex flex-col justify-between mt-10"
      data-careReviewid={{id}}
    >
      <div class="textAreaCont">
        <textarea
          id="comment_description"
          name="comment-body"
          placeholder="Enter a comment here..."
          rows="4"
		  class="bg-[#f5f3f3] p-2 rounded-lg w-full"
        ></textarea>
      </div>
      <div class="btnComment self-center my-4 p-2 px-6 bg-slate-600 text-white rounded-lg hover:bg-green-400">
        <button class="button" type="submit">Add Comment</button>
      </div>
    </form>

  {{/if}}
<script>
  const config = { googleApiKey: "{{googleApiKey}}", searchEngineId: "{{searchEngineId}}",
  };
</script>
<script src="/js/carReviewImages.js"></script>

<div class="text">
  <div class="container carReviewBoxCont">
    <div class="row headerRow">
      <div class="col-8">
        <h2 class="carReviewTitle text-uppercase">{{title}}</h2>
      </div>
      <div class="col-4">
        <p class="carReviewCreate text-right">Make:
          {{carmake}};&nbsp;&nbsp; Model:
          {{carmodel}};<br />
          Created by
          {{creator.username}}
          on
          {{format_time date_reviewcreated}},
          {{format_date date_reviewcreated}}</p>
      </div>
    </div>
    <p class="text-center carReviewDescTwo">{{carReview}}</p>
    <div id="images-container"></div>
  </div>
</div>
<hr />

{{#if logged_in}}

  <form
    class="new-comment-form formCont d-flex flex-wrap justify-content-center"
    id="new-comment-form"
    data-carReviewid={{id}}
  >
    <div class="textAreaCont p-2">
      <textarea
        id="comment_description"
        name="comment-body"
        placeholder="Enter a comment here..."
        cols="30"
        rows="2"
      ></textarea>
    </div>
    <div class="btnComment p-2">
      <button class="button btn btn-success" type="submit">Add Comment</button>
    </div>
  </form>

{{/if}}

<h2 class="text-center">Comments</h2>
<div class="comments-container">
  {{#each comments as |comment|}}
    <div class="commentCont">
      <p class="text-center commentText">{{comment.comment_description}}</p>
      <p class="text-center commentOwner"><span>~</span>Created by
        {{comment.user.username}}
        on
        {{format_time date_commentcreated}},
        {{format_date date_commentcreated}}<span>~</span></p>
    </div>
  {{/each}}
</div>

<script src="/js/comments.js"></script>